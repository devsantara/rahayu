{
  "arrowParens": "always",
  "bracketSameLine": false,
  "endOfLine": "lf",
  "bracketSpacing": true,
  "jsxSingleQuote": false,
  "printWidth": 80,
  "objectWrap": "preserve",
  "semi": true,
  "singleAttributePerLine": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "plugins": ["prettier-plugin-tailwindcss"],

  "tailwindStylesheet": "./lib/style/globals.css",
  "tailwindFunctions": ["cn", "twMerge", "clsx"]
}
